html
	head
		title Uber Sudoku
		
		// Setup to work like a mobile app
		meta(charset='utf8')
		meta(name='viewport' content='user-scalable=1, initial-scale=1.0, width=420')
		meta(name='mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-capable', content='yes')
		meta(name='apple-mobile-web-app-status-bar-style', content='black-translucent')
		meta(name='apple-mobile-web-app-title', content='Uber Sudoku')
		link(href='css/img/logo.png', rel='apple-touch-icon')

		// Scripts and Styles
		link(type='text/css' href='https://fonts.googleapis.com/css?family=Open+Sans:400,300' rel='stylesheet' )
		link(type='text/css' href='app.css' rel='stylesheet')
		
		script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/lodash.js/2.4.1/lodash.min.js')
		script(src='https://cdnjs.cloudflare.com/ajax/libs/vue/0.11.5/vue.min.js')
		script(src='app.js')

	body
		.background
			.page-container
				h1.title Uber Sudoku
				#sudoku-grid
					.cell-container.grid-align(v-repeat="numContainer: loop(gridSize)")
						.cell.grid-align.inputx(v-repeat="numCell: loop(gridSize)")
							.cell-value(v-text="getCellValue(grid, numContainer, numCell)")
							.cell-hints
								.cell-hint.grid-align(v-repeat="numHint: loop(gridSize)" v-text="numHint")
